<% provide(:title, 'Show product') %>

<%= render 'users/whiteheader' %>

<p id="notice"><%= notice %></p>

<div class="container">
  <p>
    <strong>Title:</strong>
    <%= @product.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= @product.image_url %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <%= link_to 'Edit', edit_product_path(@product), class: 'fpassbut' %> |
  <%= link_to 'Back', products_path, class: 'fpassbut' %>

  <p style="padding: 10px;"></p>
</div>

